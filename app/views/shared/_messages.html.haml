%table.ui.celled.striped.table
  %thead 
    %tr
      = paginate messages
    %tr
      %th Content
      %th Platform
      %th Medium
      %th Image
      %th
  %tfoot
    %tr
      = paginate messages
  %tbody
    - messages.each do |message|
      %tr
        %td= message.content
        %td= message.message_template.platform.to_s.titleize
        %td= message.medium
        %td= message.image_present
        %td
          %a{:href => edit_message_path(message)}
            Edit
