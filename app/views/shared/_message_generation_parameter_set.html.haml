%table.ui.very.basic.collapsing.table.message-generation-parameter-set
  %thead
    %tr
      %th
      %th Value
  %tbody
    %tr
      %td.collapsing Social media types
      %td= message_generation_parameter_set.social_network_choices.join(',').chop
    %tr
      %td.collapsing Social media distribution
      %td= message_generation_parameter_set.social_network_distribution
    %tr
      %td.collapsing Paid/unpaid (organic)
      %td= message_generation_parameter_set.medium_choices.join(',').chop
    %tr
      %td.collapsing Paid/unpaid (organic) distribution
      %td= message_generation_parameter_set.medium_distribution
    %tr
      %td.collapsing Images
      %td= message_generation_parameter_set.image_present_choices.join(',').chop
    %tr
      %td.collapsing Image distribution
      %td= message_generation_parameter_set.image_present_distribution
    %tr
      %td.collapsing Length of experiment (in days)
      %td= message_generation_parameter_set.period_in_days
    %tr
      %td.collapsing Number of messages per day per social media type
      %td= message_generation_parameter_set.number_of_messages_per_social_network
  %tfoot.full-width
    %tr
      %th{ colspan: 2 }
        Total messages: 0
        // Total messages: #{message_generation_parameter_set.expected_generated_message_count}