.ui.items
  - @facebook_posts = @experiment.posts.select{ |post| post.post_template.social_media_specification.platform == :facebook}
  - @facebook_posts.each do |post|
    .item
      .ui.small.image
        -if post.content[:image]
          - image = Image.find(post.content[:image])
          = image_tag "#{image.url}"
        -else
          = image_tag "no-image.png"
      .content
        .description
          .ui.left.basic.label
            = post.post_template.social_media_specification.post_type
          = post.content[:text]
        .extra
          %table.ui.very.basic.compact.table
            %thead
              %th Clicks
              %th Impressions
              %th Primary outcome measure
              %th Likes
              %th Shares
              %th Comments
            %tbody
              %tr
                %td= 0
                %td= 0
                %td
                  .ui.label.basic.teal
                    = "0%"
                    Click rate
