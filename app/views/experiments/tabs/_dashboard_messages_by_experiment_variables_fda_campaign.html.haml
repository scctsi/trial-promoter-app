- grouped_messages = @messages.group_by{ |message| message.message_template.experiment_variables["fda_campaign"] }
- grouped_messages.each do |campaign, messages_by_campaign|
  %h3.ui.dividing.header
    = campaign.upcase
  - messages_by_campaign.each do |message|
    .ui.items
      .item
        .ui.small.image
          -if message.image
            = image_tag "#{message.image.url}"
          -else
            = image_tag "no-image.png"
        .content
          .description
            = message.content
          .extra
            %table.ui.very.basic.compact.table
              %thead
                %th Clicks
                %th Impressions
                %th Primary outcome measure
                %th Likes
                %th Shares
                %th Comments
              %tbody
                %tr
                  %td= message.send("metric_#{message.platform}_clicks".to_sym)
                  %td= message.send("metric_#{message.platform}_impressions".to_sym)
                  %td
                    .ui.label.basic.teal
                      = message.send("percentage_#{message.platform}_clicks_impressions".to_sym)
                      Click rate
                  %td= message.send("metric_#{message.platform}_likes".to_sym)
                  %td= message.send("metric_#{message.platform}_shares".to_sym)
                  %td= message.send("metric_#{message.platform}_comments".to_sym)
