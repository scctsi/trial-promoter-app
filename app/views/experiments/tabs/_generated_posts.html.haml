%table.ui.celled.striped.table
  %thead
    %tr
      %th{ colspan: "9" } 
        %h3 Facebook (Ad)
    %tr
      %th A/B testing
      %th ID
      %th Ad name
      %th Content

      // %th Text
      // %th Headline
      // %th Link Description
      // %th Call to Action
      // %th Campaign URL
      
      %th Image
      %th Actions
  %tbody
    - @experiment.posts.each.with_index do |post, index|
      %tr
        %td
          - if index == 0
            .ui.blue.circular.label A
          - if index == 1
            .ui.blue.circular.label B
        %td= post.id
        %td= post.to_param
        %td
          .ui.middle.relaxed.aligned.list
            - ["Text", "Headline", "Link description", "Call to action", "Campaign URL"].each do |content_part|
              .item
                .right.floated.content
                  %a.copy-to-clipboard.ui.mini.icon.button{ 'data-text-to-copy': post.content[content_part.gsub(' ', '_').downcase.to_sym] } 
                    %i.copy.outline.icon
                .content
                  %strong 
                    #{content_part}:
                  = post.content[content_part.gsub(' ', '_').downcase.to_sym]
        %td
          - image = Image.find(post.content[:image])
          = image_tag "#{image.url}", width: '150', height: '150', lazy: true
        %td
          %a.preview-facebook-ad.ui.labeled.icon.button{ 'data-text': post.content[:text], 'data-headline': post.content[:headline], 'data-link-description': post.content[:link_description], 'data-call-to-action': post.content[:call_to_action], 'data-campaign-url': post.content[:campaign_url], 'data-image-url': image.url}
            %i.eye.icon
            Preview
.ui.modal#facebook-ad-preview
  %i.close.icon
  .content
    .facebook-ad.newsfeed
      %article
        %header
          .controls
            %button.facebook-button
              %i.thumbs.up.icon
              Like Page
          .profile
            %img.avatar{ src: "data:image/svg+xml;base64," }
            .profile-title
              %a.name
                Your Page Here
              %a.sponsored
                Sponsored
        %p.message
          Your Message Here
        %main
          .image
            %img{ src: "data:image/svg+xml;base64," }
          .details
            %p.headline
              Your Headline Here
            %p.description
              Your Description Here
            %footer
              .controls
                %button.facebook-button
                  Learn More
              %p.caption
                Your Caption Here
      %footer
        .stats
          %span.reactions
            %i.small.circular.inverted.blue.thumbs.up.icon
          %span.count 20
          %span.social
            %span.comments
              500 Comments
            %span.shares
              100 Shares
        %hr
        .actions
          %span.like
            %i.thumbs.up.icon
            Like
          %span.comment
            %i.comment.icon
            Comment
          %span.share
            %i.share.icon
            Share
