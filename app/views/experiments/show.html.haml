.ui.breadcrumb
  %a{:href => root_path}
    Home
  %i.right.angle.icon.divider
  .active.section
    #{@experiment.name} Workspace
.ui.divider
%h2.ui.center.aligned.header
  #{@experiment.name} Workspace
%h2.ui.center.aligned.header.pi-name
  PI: #{@experiment.pi_first_name} #{@experiment.pi_last_name}
#experiment
  .ui.top.attached.tabular.menu
    %a{ class: 'item', 'data-tab': 'setup' }
      Setup
    %a{ class: 'item', 'data-tab': 'images' }
      Images
    %a{ class: 'item', 'data-tab': 'post-templates' }
      Post templates
    %a{ class: 'item', 'data-tab': 'generated-posts' }
      Generated posts
    %a{ class: 'item', 'data-tab': 'dashboard' }
      Dashboard
    - if current_user.role.include?('administrator')
      %a{ class: 'item', 'data-tab': 'analytics-file-uploads' }
        Analytics file uploads
      %a{ class: 'item', 'data-tab': 'message-comments' }
        Message comments
  .ui.bottom.attached.tab.segment{ 'data-tab': 'setup' }
    = render partial: 'experiments/tabs/setup'
  .ui.bottom.attached.tab.segment{ 'data-tab': 'images' }
    = render partial: 'experiments/tabs/images'
  .ui.bottom.attached.tab.segment{ 'data-tab': 'post-templates' }
    = render partial: 'experiments/tabs/post_templates'
  .ui.bottom.attached.tab.segment{ 'data-tab': 'generated-posts' }
    = render partial: 'experiments/tabs/generated_posts'
  .ui.bottom.attached.tab.segment{ 'data-tab': 'dashboard' }
    = render partial: 'experiments/tabs/dashboard'
  .ui.bottom.attached.tab.segment{ 'data-tab': 'analytics-file-uploads' }
    = render partial: 'experiments/tabs/analytics_file_uploads'
  .ui.bottom.attached.tab.segment{ 'data-tab': 'message-comments' }
    = render partial: 'experiments/tabs/message_comments'
